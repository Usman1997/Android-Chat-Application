<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:id="@+id/image"
       android:scaleType="fitXY"
       android:src="@mipmap/user_r"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image"
        android:text="Name"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:id="@+id/name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name"
        android:text="status"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:id="@+id/status"/>

    <Button
        android:layout_width="300dp"
    android:layout_height="50dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/button_color_background"
    android:layout_marginBottom="20dp"
    android:text="Send Freind Request"
    android:textColor="#ffffff"
    android:id="@+id/send_request"
        android:layout_above="@+id/decline_request"
    />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_color_background"
        android:layout_marginBottom="20dp"
        android:text="Decline Friend Request"
        android:textColor="#ffffff"
        android:id="@+id/decline_request"
        android:enabled="false"
        android:visibility="invisible"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_above="@+id/send_request"
    android:text="Total Freinds |"
    android:layout_marginBottom="20dp"
    android:textColor="#000000"
    android:id="@+id/total_friends_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/send_request"
        android:text="58"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"
        android:id="@+id/total_friends"
        android:layout_toRightOf="@+id/total_friends_text"
        android:layout_marginLeft="10dp"
        />
</RelativeLayout>